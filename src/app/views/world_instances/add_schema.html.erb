<% if (session[:username].nil?) %>
    <div class="notice text-danger" style="margin:auto" id="error-login">
      <p class="center-block">Please login before adding schema a world.</p></div>
<% else %>

    <div class="col-lg-12">
      <div class="col-lg-6 col-lg-offset-3">
        <div class="center-block"><h1>Add schema to <%= @world_instance.name %></h1></div>
      </div>
      <%= render 'display/world_instances_operations'%>
    </div>

    <div id="schema_definition_div" align="center" style="padding-top:10px">
      <form class="form-inline" role="form" method="post" action="/world_instances/edit_schema">
        <input type="hidden" id="world-uri" name="uri" value="<%=@world_instance.world_instance_uri%>">
        <div class="form-group">
          <label class="sr-only" for="schema-name">Schema Name: </label>
          <input type="text" class="form-control" id="schema-name" name="schema_name" placeholder="Schema Name"/>
        </div>
        <button type="submit" class="btn btn-default">Add Schema</button>
      </form>
    </div>

<% end %>