<%= javascript_include_tag 'validator', 'data-turbolinks-track' => true %>
<h1 style="padding-bottom: 30px;">New User Registration Form</h1>
<form role="register-form" data-toggle="validator" class="form-horizontal" id="nr_register-form" name="register-form" method="post" action ="/world_instances/add_new_user" >
  <div class="form-group">
    <label for="name" class="col-sm-2 control-label">Name</label>

    <div class="col-sm-10">
      <input type="text" name="name" class="form-control" placeholder="Name" id="nr_name" required>

      <div class="help-block with-errors"></div>
    </div>
  </div>
  <div class="form-group">
    <label for="username" class="col-sm-2 control-label">Username</label>

    <div class="col-sm-10">
      <input type="text" name="username" class="form-control" placeholder="Username" id="nr_username" data-remote="/authentication/check_user" data-remote-error="Username already taken! Please use a different username." required>

      <div class="help-block with-errors"></div>
    </div>
  </div>
  <div class="form-group">
    <label for="password" class="col-sm-2 control-label">Password</label>

    <div class="col-sm-5">
      <input type="password" data-minlength="6" class="form-control" id="nr_inputPassword" placeholder="Password" name = "password" required>
      <span class="help-block with-errors">Minimum of 6 characters</span>
    </div>
    <div class="col-sm-5">
      <input type="password" class="form-control" id="nr_inputPasswordConfirm" data-match="#nr_inputPassword" data-match-error="Whoops, these don't match" placeholder="Confirm" required>

      <div class="help-block with-errors"></div>

    </div>

  </div>

  <div class="form-group">
    <label for="email" class="col-sm-2 control-label">Email Address</label>

    <div class="col-sm-10">
      <input type="email" name="email" class="form-control" placeholder="email@example.com" id="nr_email" data-error="Sorry!, that email address is invalid" required>

      <div class="help-block with-errors"></div>
    </div>
  </div>

    <div class="btn-toolbar pull-right">
      <button class="btn btn-lg btn-danger active" type="reset">Reset</button>
      <button type="submit" class="btn btn-lg btn-info active">Submit</button>
    </div>
</form>

<script type="text/javascript">
    $('#nr_register-form').validator();
</script>