<h1>MWF Bootstrap</h1>
<ul class="nav nav-tabs" role="tablist">
  <li class="active" id="create-new-li"><a>Create a new Frame</a></li>
  <li id="join-li"><a>Join an existing Frame</a></li>
</ul>

<div id="new-frame-form-container" style="display: block; padding-top: 30px;">
  <h3 align="center">System Administrator Registration</h3>
  <form  data-toggle="validator" class="form-horizontal" id="new-frame-form" name="new-frame-form" method="post" action = "/bootstrap/new_frame">
    <div class="form-group">
      <label for="name" class="col-sm-2 control-label">Name</label>

      <div class="col-sm-10">
        <input type="text" name="name" class="form-control" placeholder="System Administrator" id="name" required>

        <div class="help-block with-errors"></div>
      </div>
    </div>
    <div class="form-group">
      <label for="username" class="col-sm-2 control-label">Username</label>

      <div class="col-sm-10">
        <input type="text" name="username" class="form-control" placeholder="admin" id="username" data-remote="/authentication/check_user" data-remote-error="Username already taken! Please use a different username." required>

        <div class="help-block with-errors"></div>
      </div>
    </div>
    <div class="form-group">
      <label for="password" class="col-sm-2 control-label">Password</label>

      <div class="col-sm-5">
        <input type="password" data-minlength="6" class="form-control" id="inputPassword" placeholder="Password" name="password" required>
        <span class="help-block with-errors">Minimum of 6 characters</span>
      </div>
      <div class="col-sm-5">
        <input type="password" class="form-control" id="inputPasswordConfirm" data-match="#inputPassword" data-match-error="Whoops, these don't match" placeholder="Confirm" required>

        <div class="help-block with-errors"></div>

      </div>

    </div>

    <div class="form-group">
      <label for="email" class="col-sm-2 control-label">Email Address</label>

      <div class="col-sm-10">
        <input type="email" name="email" class="form-control" placeholder="email@example.com" id="email" data-error="Sorry!, that email address is invalid" required>

        <div class="help-block with-errors"></div>
      </div>
    </div>

    <div class="btn-toolbar pull-right">
      <button class="btn btn-lg btn-danger active" type="reset">Reset</button>
      <button type="submit" class="btn btn-lg btn-info active">Submit</button>
    </div>

  </form>
</div>

<div id="existing-frame-form-container" style="display: none;padding-top: 30px;">
  <form data-toggle="validator" class="form-horizontal" id="existing-frame-form" name="existing-frame-form" method="get" action="grid/join_grid">
    <div class="form-group">
      <label for="url" class="col-sm-2 control-label">URI</label>

      <div class="col-sm-10">
        <input type="text" name="url" class="form-control" placeholder="http://www.mwf.org" id="url" required>

        <div class="help-block with-errors"></div>
      </div>
    </div>
    <div class="btn-toolbar pull-right">
      <button class="btn btn-lg btn-danger active" type="reset">Reset</button>
      <button type="submit" class="btn btn-lg btn-info active">Submit</button>
    </div>

  </form>
</div>

<script text="text/javascript">
    $('#join-li').click(function(){
        $('#create-new-li').removeClass('active');
        $('#join-li').addClass('active');
        $('#new-frame-form-container').hide();
        $('#existing-frame-form-container').show();
    });

    $('#create-new-li').click(function() {
        $('#join-li').removeClass('active');
        $('#create-new-li').addClass('active');
        $('#new-frame-form-container').show();
        $('#existing-frame-form-container').hide();
    });

</script>