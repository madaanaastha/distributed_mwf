<% if (session[:username].nil?) %>
    <div class="notice text-danger" style="margin:auto" id="error-login">
      <p class="center-block">Please login before adding schema a world.</p></div>
<% else %>

    <div class="col-lg-12">
      <div class="col-lg-6 col-lg-offset-3">
        <div class="center-block"><h1>Create a Proxy</h1></div>
      </div>
      <%= render 'display/operations'%>
    </div>

    <div id="create_proxy_div" align="center" style="padding-top:10px">
      <form class="form-inline" role="form" method="get" action="/grid/create_proxy">
        <div class="form-group">
          <label class="sr-only" for="world_uri">URI of the world: </label>
          <input type="text" class="form-control" id="world_uri" name="world_uri" placeholder="World URI" required/>
        </div>
        <button type="submit" class="btn btn-default">Create Proxy</button>
      </form>
    </div>

<% end %>